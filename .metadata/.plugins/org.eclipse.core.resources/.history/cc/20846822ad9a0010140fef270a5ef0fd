package boletin_3;

import java.util.Scanner;

public class ejercicio8 {

	public static void main(String[] args) {
		double grados;
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("Teclee la temperatura:");
		grados = teclado.nextDouble();
		
		if (grados<=10) {
			System.out.println("Clima frÃ­o.");
		} else {
			if (grados<=20) {
				System.out.println("Clima templado.");
			} else {
				if (grados<=30) {
					System.out.println("Clima caluroso.");
				} else {
					System.out.println("Clima tropilar.");
				}
			}
		}
		teclado.close();
	}

}
