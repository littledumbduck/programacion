Laurapackage boletin_2;

import java.util.Scanner;

public class ejercicio8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String alumno;
		double nota1, nota2, nota3;

		Scanner teclado = new Scanner(System.in);

		System.out.println("Nombre del alumno:");
		alumno = teclado.nextLine();

		System.out.println("Nota primer examen:");
		nota1 = teclado.nextDouble();

		System.out.println("Nota segundo examen:");
		nota2 = teclado.nextDouble();

		System.out.println("Nota tercer examen:");
		nota3 = teclado.nextDouble();

		double media = (nota1 + nota2 + nota3) / 3;

		System.out.println("La nota media de " + alumno + " es de " + media);

		teclado.close();
	}

}
